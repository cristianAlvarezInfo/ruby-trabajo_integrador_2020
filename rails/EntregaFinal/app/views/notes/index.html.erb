<p id="notice"><%= notice %></p>

<h1>Notes of book <%= @book.title %></h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= link_to 'Show', [@book,note] %></td>
        <td><%= link_to 'Edit', edit_book_note_path(@book,note) %></td>
        <td><%= link_to 'Destroy', [@book,note], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Note', new_book_note_path(@book) %> 
<br>
<%= link_to 'Back', books_path %>
